{
  "expo": {
    "name": "Backpack Connect",
    "slug": "backpack-connect",
    "version": "1.0.0",
    "sdkVersion": "48.0.0",
    "platforms": ["ios", "android"],
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 30000,
      "checkAutomatically": "ON_LOAD"
    },
    "assetBundlePatterns": ["assets/**/*"],
    "ios": {
      "bundleIdentifier": "com.yourcompany.backpackconnect",
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Allow location to record your journey",
        "NSCameraUsageDescription": "Allow camera access for trip photos",
        "NSPhotoLibraryUsageDescription": "Allow photo selection for trip entries",
        "UIBackgroundModes": ["location"]
      }
    },
    "android": {
      "package": "com.yourcompany.backpackconnect",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ]
    },
    "extra": {
      "FIREBASE_API_KEY": "YOUR_API_KEY",
      "FIREBASE_AUTH_DOMAIN": "YOUR_AUTH_DOMAIN",
      "FIREBASE_PROJECT_ID": "YOUR_PROJECT_ID",
      "FIREBASE_STORAGE_BUCKET": "YOUR_STORAGE_BUCKET",
      "FIREBASE_MESSAGING_SENDER_ID": "YOUR_SENDER_ID",
      "FIREBASE_APP_ID": "YOUR_APP_ID"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "13.0"
          },
          "android": {
            "compileSdkVersion": 33,
            "targetSdkVersion": 33
          }
        }
      ]
    ]
  }
}
